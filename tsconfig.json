{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@yandex/ymaps3-types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@avatar": ["./src/components/common/Avatar/index.tsx"],
      "@console": ["./src/lib/console.ts"],
      "@/*": ["./src/*"],
      "ymaps3": ["./node_modules/@yandex/ymaps3-types"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "server.js"],
  "exclude": ["node_modules"]
}
